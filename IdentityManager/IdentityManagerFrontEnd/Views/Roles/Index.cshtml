@model IEnumerable<IdentityRole>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Roles List</h2>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="Upsert" asp-controller="Roles" class="btn btn-primary">Create a new role</a>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td></td>
                </tr>
            }
        </table>
    }

</div>